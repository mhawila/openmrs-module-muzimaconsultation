<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>${project.parent.groupId}.${project.parent.artifactId}</package>
	<author>nribeka</author>
	<description>
		${project.parent.description}
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/${project.parent.artifactId}/update.rdf</updateURL>
	<require_version>${openMRSVersion}</require_version>
	<!-- / Module Properties -->

	<!-- Required Modules -->
	<require_modules>
        <require_module version="${muzimaVersion}">org.openmrs.module.muzima</require_module>
        <require_module version="${muzimaFormsVersion}">org.openmrs.module.muzimaforms</require_module>
	</require_modules>
	<!-- / Required Modules -->
	
	<!-- Module Activator -->
	<activator>org.openmrs.module.muzimaconsultation.ConsultationActivator</activator>

	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.muzimaconsultation.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
		Consultation.hbm.xml
	</mappingFiles>

    <globalProperty>
        <property>muzimaconsultation.smsGatewayUrl</property>
        <defaultValue>http://41.89.173.40/</defaultValue>
        <description>
            The SMS Gateway URL used to access its rest end points.
        </description>
    </globalProperty>
    <globalProperty>
        <property>muzimaconsultation.smsApp</property>
        <defaultValue>amrs</defaultValue>
        <description>
            The name of the app/account registered at with the SMS gateway. This is the account enabling the system
            to route sms via the gateway.
        </description>
    </globalProperty>
    <globalProperty>
        <property>muzimaconsultation.smsAppPassword</property>
        <description>
            The app password to be used to connect to sms gateway.
        </description>
    </globalProperty>
	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

</module>

